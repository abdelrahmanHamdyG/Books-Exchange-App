<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookExchange"
        tools:targetApi="31">
        <activity
            android:name=".MakingDecisionActivity"
            android:exported="false" />
        <activity
            android:name=".UI.MakeRequestActivity"
            android:exported="false" />
        <activity
            android:name=".UI.BooksDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.BookExchange" />
        <activity
            android:name=".UI.AddBookActivity"
            android:exported="false"
            android:theme="@style/Theme.BookExchange" />
        <activity
            android:name=".UI.SignIn"
            android:exported="false"
            android:theme="@style/Theme.BookExchange" />
        <activity
            android:name=".UI.Registeration"
            android:exported="false"
            android:theme="@style/Theme.BookExchange" />
        <activity
            android:name=".UI.MainPage"
            android:exported="true"
            android:theme="@style/Theme.BookExchange"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>