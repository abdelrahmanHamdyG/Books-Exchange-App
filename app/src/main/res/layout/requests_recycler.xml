<!-- notification_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_view_item_background"
    android:layout_margin="2dp"
    android:elevation="4dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/request_recycler_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/baseline_swap_vertical_circle_24"
        android:contentDescription="Profile Image"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/request_recycler_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe liked your post"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/request_recycler_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textSize="14sp"
            android:textColor="#808080" />
    </LinearLayout>

    <ImageView
        android:id="@+id/request_recycler_clicked"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="bottom"
        android:src="@color/very_light_green"
        android:background="@drawable/circular_back_ground" />
</LinearLayout>
