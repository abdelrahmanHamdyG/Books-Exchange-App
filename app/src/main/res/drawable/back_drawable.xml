<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- Your normal background color -->
            <solid android:color="@color/second_color" /> <!-- Change to your desired color -->
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="#22B87F" /> <!-- Change to your desired color -->
        </shape>
    </item>
</selector>
